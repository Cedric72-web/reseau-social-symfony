{% extends "base.html.twig" %}

{% block body %}
  <div class="d-flex justify-content-around flex-wrap container mt-5">
    {% for post in posts %}
    <div class="card text-bg-secondary my-3 mx-3" style="width: 18rem;">
      {% if post.image %}
        <img src={{ post.image }} class="card-img-top" alt={{ post.title }}>
      {% endif %}
      <div class="card-body">
        {% if post.title %}
          <div class="card-title">{{ post.title }}</div>
        {% endif %}
        <p class="card-text">{{ post.content }}</p>
        <a href="{{ path('delete-post', {'id': post.id}) }}" class="btn btn-danger mx-3 mt-3">Supprimer</a>
        <a href="{{ path('edit-post', {'id': post.id }) }}" class="btn btn-warning mx-3 mt-3">Modifier</a>
        {% if app.user %}
          <a href="{{ path('copy-post', {'id': post.id }) }}" class="btn btn-info mx-3 mt-3">Copier</a>
        {% endif %}
      </div>
    </div>
    {% endfor %}
  </div>
{% endblock %}